<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true"
    tools:context=".activities.activity_main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_horizontal|top"
        android:orientation="vertical" android:padding="8dp">

        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/intro"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/appsCountTextView" style="@style/stats_text" android:layout_marginTop="8dp"
            app:autoSizeMaxTextSize="20dp" app:autoSizeMinTextSize="12sp" app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/apksCountTextView" style="@style/stats_text" app:autoSizeMaxTextSize="20dp"
            app:autoSizeMinTextSize="12sp" app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/frameworkErrorsGettingApkTypeTextView" style="@style/stats_text"
            app:autoSizeMaxTextSize="20dp" app:autoSizeMinTextSize="12sp" app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/parsingErrorsTextView" style="@style/stats_text" app:autoSizeMaxTextSize="20dp"
            app:autoSizeMinTextSize="12sp" app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/apkTypeDetectionErrorsTextView" style="@style/stats_text" app:autoSizeMaxTextSize="20dp"
            app:autoSizeMinTextSize="12sp" app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/wrongPackageNameErrorsTextView" style="@style/stats_text" app:autoSizeMaxTextSize="20dp"
            app:autoSizeMinTextSize="12sp" app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/iconFetchingErrorsTextView" style="@style/stats_text" app:autoSizeMaxTextSize="20dp"
            app:autoSizeMinTextSize="12sp" app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/wrongLabelErrorsTextView" style="@style/stats_text" app:autoSizeMaxTextSize="20dp"
            app:autoSizeMinTextSize="12sp" app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/wrongVersionCodeErrorsTextView" style="@style/stats_text" app:autoSizeMaxTextSize="20dp"
            app:autoSizeMinTextSize="12sp" app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/wrongVersionNameErrorsTextView" style="@style/stats_text" app:autoSizeMaxTextSize="20dp"
            app:autoSizeMinTextSize="12sp" app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/systemAppsErrorsTextView" style="@style/stats_text" app:autoSizeMaxTextSize="20dp"
            app:autoSizeMinTextSize="12sp" app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/summaryTextView" style="@style/stats_text" android:layout_marginTop="8dp"
            android:text="@string/summary" android:visibility="gone" app:autoSizeMaxTextSize="20dp"
            app:autoSizeMinTextSize="12sp" app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/summaryNoteTextView" style="@style/stats_text" android:text="@string/all_are_system_errors"
            android:visibility="gone" app:autoSizeMaxTextSize="20dp" app:autoSizeMinTextSize="12sp"
            app:autoSizeTextType="uniform" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
